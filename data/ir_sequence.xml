<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data noupdate="1">
        <!-- Define a sequence for generating "Código de la Hoja de Costos" -->
        <record id="seq_ipbu_code" model="ir.sequence">
            <field name="name">Código de la Hoja de Costos</field> <!-- Name of the sequence -->
            <field name="code">ipbu.code</field> <!-- The code used for this sequence, used internally by Odoo -->
            <field name="prefix">IPBU</field> <!-- The prefix for the sequence (e.g., IPBU-001) -->
            <field name="padding">4</field> <!-- Number of digits to pad the sequence (e.g., 0001, 0002, etc.) -->
            <field name="number_increment">1</field> <!-- The increment for each new number generated by the sequence -->
            <field name="number_next_actual">1</field> <!-- The next value that will be used in the sequence -->
        </record>
    </data>
</odoo>
