<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Define a record that modifies the sale.order form view -->
        <record id="view_sale_view_order_form_inherit" model="ir.ui.view">
            <!-- The name of the view -->
            <field name="name">sale.view_order_form_ipbu</field>

            <!-- The model that this view will modify -->
            <field name="model">sale.order</field>

            <!-- Reference to the original view that is being inherited -->
            <field name="inherit_id" ref="sale.view_order_form"/>

            <field name="arch" type="xml">
                <!-- Using XPath to find and modify a specific part of the original view -->
                <xpath expr="//div[@class='oe_title']/h1" position="replace">
                    <!-- The new content that will replace the original h1 tag -->
                    <h1>
                        <!-- The sale order name field (readonly and invisible) -->
                        <field name="name" readonly="1" invisible="1"/>
                        
                        <!-- The new field "code" is added to the form -->
                        <field name="code"/>
                    </h1>
                </xpath>

                <!-- Add the fields after the 'incoterm_location' field -->
                <xpath expr="//field[@name='incoterm_location']" position="after">
                    <field name="incoterm_location" field_id="incoterm_location_0"/>
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-12">
                            <field name="delivery_time"/>
                        </div>
                        <div class="col-12">
                            <span>
                                a partir de aceptación de OC válida. Sujeto a disponibilidad por ventas previas.
                            </span>
                        </div>
                    </div>

                    <field name="incoterm_age"/>    
                    <field name="policy_delivery"/>
                    <field name="valid"/>
                    <field name="warranty"/>
                    <field name="extended"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
