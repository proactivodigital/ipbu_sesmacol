<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Define a record that modifies the sale.order form view -->
        <record id="view_sale_view_order_form_inherit_code" model="ir.ui.view">
            <!-- The name of the view -->
            <field name="name">sale.view_order_form.inherit</field>

            <!-- The model that this view will modify -->
            <field name="model">sale.order</field>

            <!-- Reference to the original view that is being inherited -->
            <field name="inherit_id" ref="sale.view_order_form"/>

            <field name="arch" type="xml">
                <!-- Modificar el título de la vista -->
                <xpath expr="//div[@class='oe_title']/h1" position="replace">
                    <h1>
                        <!-- El campo 'name' debe existir en el modelo sale.order -->
                        <field name="name" readonly="1" invisible="1"/>
                        
                        <!-- Asegúrate de que 'code' también esté definido -->
                        <field name="code" readonly="state == 'done'"/>
                    </h1>
                </xpath>

                <!-- Cambiar el label del campo 'commitment_date' -->
                <xpath expr="//label[@for='commitment_date']" position="replace">
                    <label for="commitment_date" string="Delivery Date"/>
                </xpath>

                <!-- Hacer que el campo 'commitment_date' sea solo lectura o invisible -->
                <xpath expr="//div[@name='commitment_date_div']" position="replace">
                    <div name="commitment_date_div" class="o_row" invisible="1" style="display: none !important;">
                        <field name="commitment_date" readonly="state == 'cancel' or locked" invisible="1"/>
                        <span style="display: none !important;" name="expected_date_span" invisible="1" class="text-muted d-none">Expected: <field name="expected_date" class="oe_inline" widget="date" invisible="1"/></span>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
