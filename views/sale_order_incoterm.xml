<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Define a record that modifies the sale.order form view -->
        <record id="view_sale_view_order_form_inherit" model="ir.ui.view">
            <!-- The name of the view -->
            <field name="name">sale_stock.view_order_form_inherit_sale_stock_ipbu</field>

            <!-- The model that this view will modify -->
            <field name="model">sale.order</field>

            <!-- Reference to the original view that is being inherited -->
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/>

            <field name="arch" type="xml">
                <xpath expr="//field[@name='incoterm_location']" position="after">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-12">
                            <field name="delivery_time"/>
                        </div>
                        <div class="col-12">
                            <span>
                                a partir de aceptación de OC válida. Sujeto a disponibilidad por ventas previas.
                            </span>
                        </div>
                    </div>

                    <field name="incoterm_age"/>    
                    <field name="policy_delivery" nolabel="1"/>
                    
                    <div class="row">
                        <div class="col-12">
                            <field name="valid"/>
                        </div>
                        <div class="col-12">
                            <span>
                                Dias
                            </span>
                        </div>
                    </div>
                    
                    <field name="warranty"/>
                    <field name="extended"/>
                </xpath>

                <xpath expr="//field[@name='picking_policy']" position="replace">
                    <field name="picking_policy" required="True" readonly="state not in ['draft', 'sent']" invisible="1"/>
                </xpath>

                <xpath expr="//div[@name='commitment_date_div']" position="replace">
                    <div class="o_row d-none">
                        <field name="commitment_date" invisible="1"/>
                        <span class="text-muted" invisible="1">Expected: <field name="expected_date" class="oe_inline" widget="date"/></span>
                    </div>
                    <field name="effective_date" invisible="1"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
