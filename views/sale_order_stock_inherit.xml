<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Hereda de la vista principal del formulario de venta de stock -->
        <record id="view_order_form_inherit_sale_stock" model="ir.ui.view">
            <field name="name">sale.stock.view_order_form_inherit_sale_stock</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock"/> <!-- Vista original -->
            <field name="arch" type="xml">
                <!-- Hacer invisible el campo 'commitment_date' -->
                <xpath expr="//field[@name='commitment_date']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <!-- Hacer invisible el 'span.text-muted' (que estÃ¡ relacionado con la fecha de compromiso) -->
                <xpath expr="//span[@class='text-muted']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>

                <!-- Hacer invisible el campo 'expected_date' -->
                <xpath expr="//field[@name='expected_date']" position="attributes">
                    <attribute name="invisible">1</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
