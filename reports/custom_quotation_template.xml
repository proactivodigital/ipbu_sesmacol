<odoo>
  <template id="report_custom_quotation_document">
    <t t-call="web.external_layout">
      <div class="page">
        <h2 style="text-align: center;">Cotización Personalizada</h2>
        <p><strong>Número de Cotización:</strong> <t t-esc="doc.name"/></p>
        <p><strong>Cliente:</strong> <t t-esc="doc.partner_id.name"/></p>
        <p><strong>Fecha:</strong> <t t-esc="doc.date_order.strftime('%d/%m/%Y')"/></p>

        <!-- Tabla de productos -->
        <table class="table table-sm mt32">
          <thead>
            <tr>
              <th>Producto</th>
              <th>Cantidad</th>
              <th>Precio Unitario</th>
              <th>Total</th>
            </tr>
          </thead>
          <tbody>
            <tr t-foreach="doc.order_line" t-as="line">
              <td><t t-esc="line.product_id.name"/></td>
              <td><t t-esc="line.product_uom_qty"/></td>
              <td><t t-esc="line.price_unit"/></td>
              <td><t t-esc="line.price_total"/></td>
            </tr>
          </tbody>
        </table>
      </div>
    </t>
  </template>
</odoo>
